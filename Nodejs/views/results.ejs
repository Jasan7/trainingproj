<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invalid Credentials</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>
        .gradient-custom {
            /* Chrome 10-25, Safari 5.1-6 */
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background-image: linear-gradient(135deg, #6a6eea 10%, #dbf088 100%);
        }
        table{
            font-size: 19px;
        }
    </style>
</head>

<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3>STUDENT DETAILS</h3>
                            <div class="mb-md-5 mt-md-4 pb-6">                        
                                <table class="table table-borderless">
                                    <thead>
                                      <tr>
                                        <th scope="col">Name:</th>
                                        <td ><%= name %></td>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <th scope="row">Roll number:</th>
                                        <td><%= srollno %></td>
                                      </tr>
                                      <tr>
                                        <th scope="row">Date of Birth:</th>
                                        <td><%= sdob %></td>
                                      </tr>
                                      <tr>
                                        <th scope="row">Score:</th>
                                        <td colspan="2"><%= score %></td>
                                      </tr>
                                    </tbody>
                                  </table>

                            </div>
                            <a class="btn btn-outline-success" type="submit" href = "/stu_dash">Check for another student</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>